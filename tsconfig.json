{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "nodenext",
		"module": "nodenext",
		"declaration": true,
		"isolatedDeclarations": true,
		"strict": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo"
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["**/*.spec.ts"]
}
